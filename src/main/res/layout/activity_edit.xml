<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <!--현재 상단의 메뉴 버튼 & 하단의 버튼 세 개에 대한 화면 연결만 해주시면 됩니다!-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--상단 고정
        왼쪽의 메뉴 버튼 & 템플릿 편집 글씨 보여주는 자리-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <!--메뉴 버튼 클릭 시 activity_menu.xml로 이동-->
                <ImageButton
                    android:id="@+id/EditToMenubtn"
                    android:layout_width="35dp"
                    android:layout_height="29dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="16dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:tint="#ff1ba4b8"
                    app:srcCompat="@drawable/menu"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="360dp"
                    tools:layout_editor_absoluteY="29dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="템플릿 편집"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints,VectorDrawableCompat"
                    tools:layout_editor_absoluteX="112dp"
                    tools:layout_editor_absoluteY="16dp" />
            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ic_launcher_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="457dp"
            android:orientation="horizontal">



        </LinearLayout>

    </LinearLayout>

    <!--화면 하단의 템플릿 편집 관련 버튼 세 개가 고정돼 있는 자리-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">


        <!--잠금화면의 배경 이미지를 선택하는 화면으로 이동
        편집 기능이 구현될 때 같이 완성할 것임-->
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:textColor="@color/black"
            android:text="WALLPAPERS"/>


        <!--잠금화면의 시계와 날짜 디자인을 선택하는 화면으로 이동
        편집 기능이 구현될 때 같이 완성할 것임-->
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:textColor="@color/black"
            android:text="CLOCK &amp; DATE" />


        <!--잠금화면의 작은 요소들을 선택하는 화면으로 이동
        편집 기능이 구현될 때 같이 완성할 것임-->
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:textColor="@color/black"
            android:text="COMPONENTS" />


    </LinearLayout>

    <!--템플릿 편집이 모두 끝나고 이 버튼을 클릭-->
    <Button
        android:id="@+id/CommunityToUploadbtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:background="#FF1BA4B8"
        android:fontFamily="@font/nanumbarungothic"
        android:text="템플릿 편집 완료"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</LinearLayout>