<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_Commu"
    android:fitsSystemWindows="true"
    tools:context=".CommunityActivity"
    tools:openDrawer="start"
    android:background="#FFFFFF">

    <!--현재 상단의 메뉴 버튼 & 하단의 버튼 세 개에 대한 화면 연결만 해주시면 됩니다!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--상단 고정
    왼쪽 메뉴 버튼 & 가운데 커뮤니티 글씨 보여주는 자리-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal">
                <include  layout="@layout/actionbar"/>
            </LinearLayout>
        </LinearLayout>

        <!--스크롤뷰-->
        <!--공유된 템플릿에 대한 정보를 보여주는 화면으로 현재는 클릭 이벤트 없음
        다운받기 버튼은 다운 기능이 구현될 때 클릭하면 사용자의 디바이스에 다운되는 버튼-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.example.lockpocket.shareui.UserUIActivity
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </ScrollView>

        <!--하단고정-->
        <!--화면 하단의 버튼 세 개가 고정돼 있는 자리-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <include layout="@layout/underbar"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/activity_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>
