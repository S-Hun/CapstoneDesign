<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF">


    <!--현재 상단의 메뉴 버튼 & 하단의 버튼 세 개에 대한 화면 연결만 해주시면 됩니다!-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--상단 고정
        왼쪽의 메뉴 버튼 & 템플릿 업로드 글씨 보여주는 자리-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <include  layout="@layout/actionbar"/>
        </LinearLayout>
    </LinearLayout>

    <!--스크롤뷰
    템플릿을 업로드 할 때 템플릿 제목 & 사용자의 이메일 & 템플릿에 대한 설명 & 템플릿 가져오기
    를 보여주는 뷰-->
    <!--현재 추가해야하는 클릭 이벤트나 다른 화면으로의 이동은 없음, 설명을 추가하자면
    하단의 내 템플릿 가져오기 옆의
    갤러리 아이콘 클릭 시 activity_community.xml에서 user로 대체된 이미지가 가져온 이미지로 업로드
    폴더 아이콘은 사용자가 본인의 템플릿을 가져오는 버튼-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="35dp"
                    android:text="제목*"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/help_box"
                    android:text="제목을 입력하세요"
                    android:textColor="#A8A8A8"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="35dp"
                    android:text="이메일"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/help_box"
                    android:text="이메일을 입력하세요"
                    android:textColor="#A8A8A8"
                    android:textSize="15sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="35dp"
                    android:text="템플릿 설명"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/help_box"
                    android:text="템프릿 설명을 입력하세요"
                    android:textColor="#A8A8A8"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="50dp"
                    android:text="내 템플릿 가져오기"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageButton
                    android:layout_width="71dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />

                <ImageButton
                    android:layout_width="58dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:tint="#A8A3A3"
                    app:srcCompat="@drawable/folder" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <!--버튼 클릭 시 이동하는 화면은 없지만
                공유 기능이 구현되면 팝업 메세지 등으로 간단하게 공유 완료됐다는 알림을 뜨게 할 것임
                현재는 클릭 이벤트 없음-->
                <Button
                    android:id="@+id/CommunityToUploadbtn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="#FF1BA4B8"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="내 템플릿 공유하기"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--하단고정-->
    <!--화면 하단의 버튼 세 개가 고정돼 있는 자리-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <include layout="@layout/underbar"/>
    </LinearLayout>


</LinearLayout>